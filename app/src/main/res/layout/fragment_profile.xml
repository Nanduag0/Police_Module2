<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_blue_grey_700_opac">


   <com.mikhaellopez.circularimageview.CircularImageView
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@drawable/nitshacks"
       android:layout_alignParentTop="true"
       android:layout_centerInParent="true"
       android:layout_marginTop="10dp"
       android:id="@+id/iv_profile"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linear_lay1_profile"
        android:layout_below="@id/iv_profile"
       android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/account"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_profile"
            android:layout_height="50dp"
            android:text="Trishna"
            android:textColor="@color/md_black_1000"
            android:layout_centerInParent="true"
           android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linear_lay2_profile"
        android:layout_below="@id/linear_lay1_profile"
        android:orientation="horizontal"
        android:background="@drawable/border"
      >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/phone"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_profile_phone_number"
            android:layout_height="50dp"
            android:text="123456789"
            android:textColor="@color/md_black_1000"
            android:layout_centerInParent="true"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_alignParentTop="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relative_lay_profile"
        android:layout_below="@id/linear_lay2_profile"
        android:orientation="horizontal"
        android:background="@drawable/border"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mail"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_profile_email"
            android:layout_height="50dp"
            android:text="xyz@gmail.com"
            android:textColor="@color/md_black_1000"
            android:layout_centerInParent="true"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_alignParentTop="true"/>
    </LinearLayout>

</RelativeLayout>