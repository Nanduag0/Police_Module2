<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="Welcome to  ANOMITE"
        android:textAlignment="center"
        android:textColor="@color/md_pink_800"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="visible">

    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/editTextStyle"
        android:layout_marginTop="180dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_register_poicename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/editTextStyle"
        android:layout_marginTop="260dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_register_tv_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/editTextStyle"
        android:layout_marginTop="340dp"
        android:elevation="10dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_register_tv_confirmpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="340dp"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="10" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/editTextStyle"
        android:layout_marginTop="420dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_register_tv_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="420dp"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/editTextStyle"
        android:layout_marginTop="500dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_register_phno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Ph-Number"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:visibility="invisible">

    </ProgressBar>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_register_btn_register"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:padding="2dp"
        android:textAlignment="center"
        android:text="REGISTER"
        android:textColor="@color/md_grey_50"
        app:backgroundTint="@color/md_pink_600"
        app:iconPadding="20dp"
        app:iconSize="16dp"
        app:iconTint="@null"
        app:rippleColor="@color/md_pink_100" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="670dp"
        android:text="Already have a account?"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/activity_register_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="670dp"
        android:text="Login"
        android:textColor="@color/md_pink_700"
        android:textSize="15dp" />

</RelativeLayout>