<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item_cv_member"
    android:layout_width="190dp"
    android:layout_height="220dp"
    android:layout_marginTop="10dp"
    android:elevation="4dp"
    android:layout_marginLeft="5dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/card_item_img_member"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ui_design" />

        <TextView
            android:id="@+id/card_item_tv_memberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_item_img_member"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-25dp"
            android:text="Member"
            android:textColor="#000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/member_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_item_tv_memberName"
            android:text="Developer"
            android:layout_marginBottom="-20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>